@model SC_701_ProyectoG4_Horarios.DAL.Reservacion

@{
    ViewData["Title"] = "Crear Reservación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Crear Reservación</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="AulaId" class="control-label">Aula</label>
                <select asp-for="AulaId" class="form-control" asp-items="ViewBag.AulaId"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ProfesorId" class="control-label">Profesor</label>
                <select asp-for="ProfesorId" class="form-control" asp-items="ViewBag.ProfesorId"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ClaseId" class="control-label">Clase</label>
                <select asp-for="ClaseId" class ="form-control" asp-items="ViewBag.ClaseId"></select>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Fecha"  class="control-label"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="HoraInicio"  class="control-label"></label>
                <input asp-for="HoraInicio" type="time" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="HoraFin"  class="control-label"></label>
                <input asp-for="HoraFin" type="time" class="form-control" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 text-center">
                <input type="submit" value="Crear" class="btn btn-primary px-5" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
