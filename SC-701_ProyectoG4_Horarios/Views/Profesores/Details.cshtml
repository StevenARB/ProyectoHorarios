@using System.Security.Claims
@model SC_701_ProyectoG4_Horarios.DAL.Profesor

@{
    ViewData["Title"] = "Detalles Profesor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var identidad = User.Identity as ClaimsIdentity;
    var roles = identidad.Claims.Where(c => c.Type == ClaimTypes.Role).ToList();
}

<h1>Detalles Profesor</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Model.Usuario.Nombre @Model.Usuario.PrimerApellido @Model.Usuario.SegundoApellido
        </dd>
    </dl>
</div>
<div>
    @{
        if (roles.Select(r => r.Value).Contains("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger">Eliminar</a>
        }
    }
</div>

<div class="mt-5">
    <a asp-action="Index">Volver</a>
</div>
